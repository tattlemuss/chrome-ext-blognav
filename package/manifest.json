{
  "manifest_version": 2,

  "name": "blognav",
  "short_name": "blognav",
  "description": "A tiny panel allowing you to navigate blogs in a simple and consistent fashion.",
  "version": "0.0.1",
  
  "browser_action":
  {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "icons":
  {
    "48": "icon48.png"
  },

  "content_scripts":
  [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["contentscript.js"]
    }
  ],
  
  "web_accessible_resources":
  [
    "blognav.css",
    "icon.png"
  ],

  "permissions":
  [
    "storage"
  ],

  "options_page": "options.html"
}
